# Deploy token - required for deploying sites
# Generate with: openssl rand -hex 32
DEPLOY_TOKEN=

# Base URL for site links (default: https://wendy.monster)
BASE_URL=https://wendy.monster

# Brain feed access code (what users type to access the feed)
BRAIN_ACCESS_CODE=wendyiscool

# Brain feed token signing secret
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
BRAIN_SECRET=

# GitHub webhook signature validation (optional)
# Set this to the same secret configured in your GitHub webhook settings
# If set, only requests with valid X-Hub-Signature-256 headers are accepted
WEBHOOK_SECRET=
