{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Task tool is disabled. Use bd (beads) for background tasks instead. See /data/wendy/BD_USAGE.md for details.' >&2 && exit 2"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/app/config/hooks/remind_analyze_file.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/app/config/hooks/journal_stop_check.sh"
          }
        ]
      }
    ]
  }
}
